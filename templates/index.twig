{% extends 'layout.twig' %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Hotel room quota
                </h1>
                {% for base in base_rooms %}
                    <p class="base_title">Based on {{ base.type }}</p>
                    <div class="calculation_quota">
                        <table class="flat-table">
                            <tbody>
                            <tr>
                                <th class="td_designation">DESIGNATION</th>
                                <th class="td_amount">ARIARY</th>
                                <th class="td_amount">EURO</th>
                            </tr>
                            {% for content in base.content %}
                                <tr>
                                    <td>
                                        <span
                                            {% if(content[0]in ['Single room','Double room','Triple room','Family room','']) %}
                                                class="glyphicon glyphicon-bed"
                                            {% elseif(content[0]) in ['Breakfast','Dinner','Lunch'] %}
                                                class="glyphicon glyphicon-cutlery"
                                            {% else %}
                                                class="glyphicon glyphicon-usd"
                                            {% endif %}
                                            >
                                        </span>
                                        <span class="designation_element">
                                            {{ content[0] }}
                                        </span>
                                    </td>
                                    <td class="td_amount">{{ content[1] }}</td>
                                    <td class="td_amount">{{ content[2] }}</td>
                                </tr>
                            {% endfor %}
                            <tr class="tr_total">
                                <td>
                                    <span class="glyphicon glyphicon-plus"></span>
                                    <span class="designation_total">
                                        {{ base.total[0] }}
                                    </span>
                                </td>
                                <td class="td_amount">{{ base.total[1] }}</td>
                                <td class="td_amount">{{ base.total[2] }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="detail" id="only">
                        <div class="detail_head">Details<span class="glyphicon glyphicon-menu-down"></span></div>

                        <div class="detail_body">
                            <div class="detail_hr"></div>
                            <div class="detail_body_elements">

                                blabla<br/>
                                bleble<br/>
                                blibli<br/>
                                bloblo<br/>
                                blublu

                            </div>
                        </div>
                    </div>

                    <hr>
                {% endfor %}

                <hr>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Quota Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
                </div>

            </div>

        </div>
        <!-- /.row -->

        <hr>

    </div>
    <!-- /.container -->

{% endblock body %}
