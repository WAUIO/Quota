{% extends 'layout.twig' %}

{% block total_quota %}
    <!--Content LEFT-->
    <h1 class="page-header">
        Total quota
    </h1>

    <p id="reference">Quota nÂ°1200</p>
    {% if(base_rooms|length > 0) %}
        {% for base in base_rooms %}
            <p class="base_title" id="{{ base.type|replace({' ' : '_'}) }}">Based on {{ base.type }}</p>
            <div class="calculation_quota">

                <!--table for each quota-->
                <table class="flat-table">
                    <tbody>
                    <tr>
                        <th class="td_designation">DESIGNATION</th>
                        <th class="td_amount">ARIARY</th>
                        <th class="td_amount">EURO</th>
                        <th class="td_amount">USD</th>
                    </tr>
                    {% for content in base.content %}
                        <tr {% if(content[0] == 'Total / pax') %}class="tr_total" {% endif %}>
                            <td>
                                <span {% if(content[0]in ['Vignette','Various taxes']) %}
                                    class="glyphicon glyphicon-usd"
                                {% elseif(content[0]) in ['Breakfast','Dinner','Lunch'] %}
                                    class="glyphicon glyphicon-cutlery"
                                {% elseif(content[0]) == 'Total / pax' %}
                                    class="glyphicon glyphicon-plus"
                                {% else %}
                                    class="glyphicon glyphicon-bed"
                                {% endif %}
                                >
                                </span>

                                <span {% if(content[0] == 'Total / pax') %}class="designation_total"{% else %}class="designation_element"{% endif %}>
                                    {{ content[0] }}
                                </span>
                            </td>
                            <td class="td_amount">{{ content[1] }}</td>
                            <td class="td_amount">{{ (content[1] / base.euro)|number_format(2, '.', ',') }}</td>
                            <td class="td_amount">{{ (content[1] / base.dollar)|number_format(2, '.', ',')}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="detail" id="detail_{{ base.type|replace({' ' : '_'}) }}">
                <div class="detail_head">Details<span class="glyphicon glyphicon-menu-down"></span></div>

                <div class="detail_body">
                    <div class="detail_hr"></div>
                    <div class="detail_body_elements">

                        <!--
                         detail here
                         *
                         **
                         ***
                         ****
                         -->
                    </div>
                </div>
            </div>

            <hr>
        {% endfor %}
    {% else %}
        <div class="no_quota">
            No quota for this customer !<br/><br/>
            <div class="add_room_button" data-popup-open="popup-1">Add quota</div>
        </div>
    {% endif %}
    <hr>
{% endblock total_quota %}
