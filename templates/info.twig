{% extends 'layout.twig' %}

{% block body %}
    <h1 class="page-header">
        Customer informations
    </h1>

    <form class="form-horizontal">
        <div class="form-group row">
            <label for="label" class="col-xs-2 col-form-label">Customer reference</label>
            <div class="col-xs-10">
                <input class="form-control" type="text"  name="customerRef" id="customerRef">
            </div>
        </div>
        <div class="form-group row">
            <label for="label" class="col-xs-2 col-form-label">Name</label>
            <div class="col-xs-10">
                <input class="form-control" type="text"  name="name" id="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="label" class="col-xs-2 col-form-label">Number of adults</label>
            <div class="col-xs-10">
                <input class="form-control" type="number" min="0" max="100"  name="nbAdults" id="nbAdults"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="label" class="col-xs-2 col-form-label">Number of children</label>
            <div class="col-xs-10">
                <input class="form-control" type="number" min="0" max="100" name="nbChildren" id="nbChildren"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="label" class="col-xs-2 col-form-label">Beginning of stay</label>
            <div class="col-xs-10">
                <input class="form-control" name="stay" id="stay" placeholder="DD/MM/YYY" type="text"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-10">
                <span class="client_message"></span>
            </div>
            <div class="col-xs-2">
                <div class="add_client" id="btn_save">
                    <span>Save</span>
                </div>
            </div>
        </div>

        <div id="client_saved" class="row"></div>
    </form>
{% endblock body %}