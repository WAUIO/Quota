{% extends 'layout.twig' %}

{% block login %}
    <div class="col-xs-6 col-centered">
        <div class="imgcontainer">
            <img src="/images/user1.png" alt="Avatar" class="avatar">
        </div>

        <form id="login_form" method="post">
            <label class="col-xs-12"><b>Email</b></label>

            <input type="email" id="login_email" class="col-xs-12 input_login" placeholder="Enter Email address" name="login_email" required oninvalid="this.setCustomValidity('Please enter a valid email')" onchange="try{setCustomValidity('')}catch(e){}">

            <label class="col-xs-12"><b>Password</b></label>
            <input type="password" id="login_password" class="col-xs-12 input_login" placeholder="Enter Password" name="login_password" required oninvalid="this.setCustomValidity('Please complete this field')" onchange="try{setCustomValidity('')}catch(e){}">

            <p style="font-size:0.7em; text-align: center;"><em>*Only specific Podio members are allowed</em></p>

            <div class="col-xs-12" id="login_error">Error message</div>

            <button type="submit" class="col-xs-12" style="padding: 0!important">
                <span class="col-xs-12" id="login_btn">Login</span>
            </button>
        </form>
    </div>
{% endblock login %}


