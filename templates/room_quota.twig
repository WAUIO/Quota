{% extends 'layout.twig' %}


{% block body %}
    <!--Content LEFT-->
    <h1 class="page-header" id="reference">
        Quota room : {{ reference_quota }}
    </h1>

    {% if(base_rooms|length > 0) %}
        {% for room in base_rooms %}
            <p class="base_title" id="{{ room.type|replace({' ' : '_'}) }}">Based on {{ room.type }}</p>
            <div class="calculation_quota">
                <!--table for each quota-->
                <table class="flat-table" id="table_{{ room.type|replace({' ' : '_'}) }}">
                    <tbody>
                        <tr>
                            <th class="td_designation">DESIGNATION</th>
                            <th class="td_amount">ARIARY</th>
                            <th class="td_amount">EURO<div class="exchange_euro hide">{{ room.euro }}</div></th>
                            <th class="td_amount">USD<div class="exchange_dollar hide">{{ room.dollar }}</div></th>
                        </tr>
                        {% for content in room.content %}
                            <tr
                                {% if(content[0] == 'Total / pax') %} class="tr_total"
                                {% elseif (content[0] == 'Family room')%} class="tr_room"
                                {% elseif (content[0] == 'Vignette')%} class="tr_vignette"
                                {% elseif (content[0] == 'Various taxes')%} class="tr_tax"
                                {% endif %}>

                                <td>
                                    <span {% if(content[0]in ['Vignette','Various taxes']) %}
                                            class="glyphicon glyphicon-usd"
                                        {% elseif(content[0]) in ['Breakfast','Dinner','Lunch'] %}
                                            class="glyphicon glyphicon-cutlery"
                                        {% elseif(content[0]) == 'Total / pax' %}
                                            class="glyphicon glyphicon-plus"
                                        {% else %}
                                            class="glyphicon glyphicon-bed"
                                        {% endif %}
                                    >
                                    </span>
                                    {% if(content[0] == 'Total / pax') %}
                                        <span class="designation_total">
                                            {{ content[0] }}
                                        </span>
                                        {% if(room.type == 'family room') %}
                                            <span style="white-space:pre"> : 1 person out of </span>
                                            <input type="number" min="1" max="20" name="family_member" id="family_member" style="width: 50px;" value="1"/>
                                        {% endif %}
                                    {% else %}
                                        <span class="designation_element">
                                            {{ content[0] }}
                                         </span>
                                    {% endif %}
                                </td>
                                <td class="td_amount">
                                    <span class="mga_value">{{ content[1] }}</span>
                                    {% if(room.type == 'family room') %}<span class="hide">{{ content[1] }}</span>{% endif %}
                                </td>
                                <td class="td_amount">{{ (content[1] / room.euro)|number_format(2, '.', ',') }}</td>
                                <td class="td_amount">{{ (content[1] / room.dollar)|number_format(2, '.', ',')}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="detail" id="detail_{{ room.type|replace({' ' : '_'}) }}">
                <div class="detail_head">Details<span class="glyphicon glyphicon-menu-down"></span></div>

                <div class="detail_body">
                    <div class="detail_hr"></div>
                    <div class="detail_body_elements">

                        <!--
                         detail here
                         *
                         **
                         ***
                         ****
                         -->
                    </div>
                </div>
            </div>

            <hr>
        {% endfor %}
    {% else %}
        <div class="no_quota">
            No quota for this customer !<br/><br/>
            <div class="add_room_button" data-popup-open="popup-1">Add quota</div>
        </div>
    {% endif %}
    <hr>
{% endblock body %}

{% block menu_room %}
    <!-- Side Widget Well -->
    <div class="row well">
        <h4>Existing room for this quota</h4>
        {% if(existing_base|length > 0) %}
            {% for base in existing_base %}
                <div class="base_types">
                    <a class="base_type" href="#{{ (base|lower)|replace({' ' : '_'}) }}" >{{ base }}</a>
                </div>
            {% endfor %}
        {% else %}
            <div class="no_base">
                No base for this quota !
            </div>
        {% endif %}
        <div class="add_room_button" data-popup-open="popup-1">Add hotel / room</div>
    </div>

    <script src="/js/room_quota.js"></script>
{% endblock menu_room %}


